.videoContainer .header{
  display: flex;
}

.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search{

  border: 1rpx solid #eee;
  border-radius: 50rpx;
  flex: 1;
  margin:0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;

}

.videoContainer .navScroll{

  display: flex;
  white-space: nowrap;
  height: 100rpx;
}


.navScroll .navItem{

  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.navItem .active{

  border-bottom: 1rpx solid #d43c43;
}