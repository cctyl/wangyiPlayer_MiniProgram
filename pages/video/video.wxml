<view class="videoContainer">
    <!--    头部区域-->
    <view class="header">
        <image src="/static/images/video/video.jpg"></image>
        <view class="search">
            搜索音乐
        </view>
        <image src="/static/images/logo.png"></image>
    </view>

    <!--导航区域-->
    <scroll-view scroll-x enable-flex class="navScroll"
                 scroll-into-view="{{'scroll'+navId}}"
                 scroll-with-animation
    >
        <view class="navItem " wx:for="{{videoGroupList}}" wx:key="id">
            <view class="navContent {{item.id==navId?'active':''}}" bindtap="changeNav" id="{{item.id}}">
                {{item.name}}
            </view>
        </view>


    </scroll-view>

    <!--视频列表区域-->
    <scroll-view scroll-y>

        <view class="videoItem" wx:for="{{videoList}}" wx:key="num">
            <video src="{{videoUrl}}" class="common" wx:if="{{videoId == item.data.vid}}"></video>
            <image wx:else src="{{item.data.coverUrl}}" class="common" bindtap="handlePlay" id="{{item.data.vid}}"></image>


            <view class="content">{{item.data.title}}</view>

            <view class="footer">
                <image class="avater" src="{{item.data.creator.avatarUrl}}"></image>
                <text class="nickname">{{item.data.creator.nickname}}</text>
                <view class="commend_praised">
                    <text class="item">
                        <text class="iconfont xxx"></text>
                        <text class="count">{{item.data.praisedCount}}</text>
                    </text>
                    <text class="item">
                        <text class="iconfont xxx"></text>
                        <text class="count">{{item.data.commentCount}}</text>
                    </text>

                    <button open-type="share" class="item btn">
                        <text class="iconfont xxx"></text>
                    </button>

                </view>
            </view>
        </view>


    </scroll-view>
</view>